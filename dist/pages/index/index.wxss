  height: 100%;
}
page .login-button {
  position: absolute;
  top: 50%;
  left: 50%;
  margin-top: -100rpx;
  margin-left: -200rpx;
  width: 400rpx;
}
.weui-btn {
  border-radius: 6rpx;
}
.weui-panel {
  padding: 40rpx 30rpx;
}
.weui-panel:before, .weui-panel:after {
  border: none;
}
.weui-media-box__hd_in-appmsg {
  width: 100rpx;
  height: 100rpx;
}
.weui-media-box__title {
  font-size: 36rpx;
  color: #000;
}
.weui-media-box__desc {
  font-size: 24rpx;
  color: #888;
}
.weui-media-box:before {
  border: none;
}
