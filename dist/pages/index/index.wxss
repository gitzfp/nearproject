  padding: 40rpx 30rpx;
  background-color: #353535;
}
.ui-avatar {
  height: 100rpx;
  width: 100rpx;
}
.ui-nickname {
  height: 100rpx;
  line-height: 100rpx;
  margin-left: 16rpx;
  margin-right: 16rpx;
  color: #fff;
}
.ui-post {
  margin-top: 20rpx;
}
.ui-title {
  margin-bottom: 16rpx;
  font-size: 32rpx;
  color: #000;
}
.ui-like {
  font-size: 24rpx;
}
.ui-font-red {
  color: #e64340;
}
