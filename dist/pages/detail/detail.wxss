@charset "UTF-8";
/**
 * 重置weui样式
 */
.weui-panel {
  padding: 0 30rpx;
  padding-bottom: 90rpx;
}
.weui-panel:before, .weui-panel:after {
  border: none;
}
.weui-media-box__hd_in-appmsg {
  width: 100rpx;
  height: 100rpx;
}
.weui-media-box__title {
  font-size: 36rpx;
  color: #000;
}
.weui-media-box__desc {
  font-size: 24rpx;
  color: #888;
}
.weui-media-box:before {
  border: none;
}
.weui-media-box {
  padding: 8rpx 0;
}
/**
 * 自定义样式
 */
.ui-title {
  margin: 16rpx 0;
  font-size: 36rpx;
  color: #000;
}
.ui-like {
  font-size: 24rpx;
}
.ui-content {
  color: #888888;
  font-size: 28rpx;
  padding: 0 0 16rpx 0;
}
.ui-list-item {
  border-top: 2rpx solid #d8d8d8;
  /* margin-bottom: 8px; */
  padding-top: 16rpx;
  padding-bottom: 16rpx;
}
.ui-list-item:last-child {
  border-bottom: 2rpx solid #d8d8d8;
  margin-bottom: 112rpx;
}
.ui-mr-8 {
  margin-right: 16rpx;
}
.ui-font-red {
  color: #e64340;
}
.ui-font-gray {
  color: #d8d8d8;
}
.ui-font-green {
  color: #09BB07;
}
.ui-button-fixed {
  width: 100%;
  padding-top: 10rpx;
  position: fixed;
  bottom: 0;
  background-color: #d9d9d9;
}
.ui-btn {
  border-radius: 0;
  border: none;
}
.ui-btn:after {
  border-radius: 0;
  border: none;
}
.weui-flex__item {
  width: 100%;
  position: fixed;
  bottom: 0;
}
map {
  width: 100%;
  height: 540rpx;
  position: relative;
}
.current-site-icon {
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
      -ms-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
}
.itemView {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  background-color: "white";
}
