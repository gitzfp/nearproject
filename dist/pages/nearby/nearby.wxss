@charset "UTF-8";
/**
* 重置weui样式
*/
.weui-panel {
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-flex-wrap: wrap;
      -ms-flex-wrap: wrap;
          flex-wrap: wrap;
  -webkit-flex: 1;
      -ms-flex: 1;
          flex: 1;
  text-align: center;
}
.weui-panel .search {
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-flex-direction: row;
      -ms-flex-direction: row;
          flex-direction: row;
  width: 100%;
  padding: 20rpx;
}
.weui-panel .search .search-input {
  border: 2rpx solid #d8d8d8;
  height: 80rpx;
  -webkit-flex: 1;
      -ms-flex: 1;
          flex: 1;
}
.weui-panel .search .search-button {
  width: 120rpx;
  height: 80rpx;
  margin-right: 20rpx;
  line-height: 80rpx;
  text-align: center;
}
.weui-btn {
  border-radius: 6rpx;
}
.weui-panel:before,
.weui-panel:after {
  border: none;
}
.weui-media-box {
  padding: 5rpx;
  position: relative;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-justify-content: space-between;
      -ms-flex-pack: justify;
          justify-content: space-between;
  margin-left: 10rpx;
}
.weui-media-box__title {
  font-size: 28rpx;
  color: #353535;
  padding-top: 20rpx;
  padding-left: 20rpx;
}
.weui-media-box__desc {
  font-size: 20rpx;
  color: #888;
  margin-right: 20rpx;
}
.weui-media-box:before {
  border: none;
}
/**
* 自定义样式
*/
.ui-header {
  padding: 40rpx 30rpx;
  background-color: #353535;
}
.ui-avatar {
  height: 100rpx;
  width: 100rpx;
}
.ui-nickname {
  height: 100rpx;
  line-height: 100rpx;
  margin-left: 16rpx;
  margin-right: 16rpx;
  color: #fff;
}
.ui-post {
  margin-top: 20rpx;
}
.ui-title {
  margin-bottom: 16rpx;
  font-size: 32rpx;
  color: #000;
}
.ui-like {
  text-align: left;
  font-size: 24rpx;
  margin-right: 20rpx;
}
.ui-font-red {
  color: #e64340;
}
.ui-font-gray {
  color: #d8d8d8;
}
.ui-font-green {
  color: #09bb07;
}
.ui-content {
  color: #353535;
  font-size: 28rpx;
  padding: 8rpx 14rpx;
  width: auto;
  overflow: hidden;
  -o-text-overflow: ellipsis;
     text-overflow: ellipsis;
  white-space: nowrap;
  word-wrap: normal;
  word-wrap: break-word;
  word-break: break-all;
}
.ui-content-near {
  padding: 8rpx 30rpx;
}
.ui-list-item {
  border: 0 solid #d8d8d8;
  margin-bottom: 30rpx;
  width: 50%;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  float: left;
}
.ui-toolbar {
  height: 60rpx;
  line-height: 60rpx;
  color: #888;
  font-size: 24rpx;
  background-color: #e8e8e8;
  padding-top: 4rpx;
  padding-bottom: 4rpx;
}
.ui-mr-8 {
  margin-right: 16rpx;
}
.weui-uploader__files {
  overflow: hidden;
}
.weui-uploader__files .weui-uploader__file {
  margin-top: 20rpx;
  margin-right: 0rpx;
  margin-bottom: 0rpx;
  width: 100%;
}
.weui-uploader__files .weui-uploader__file .weui-uploader__img {
  display: block;
  width: 310rpx;
  margin: 0 auto;
  /*图片居中*/
  height: 400rpx;
  border-radius: 16rpx;
}
